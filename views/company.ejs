          <div class="company-images">
            <span class="h4">Life at <%= company.name %></span>
            <div class="images-block row g-2 my-4">
              <div class="col-md-8">
                <% let companyImages = company.company_images.split(',') %>
                <img src="<%= companyImages[0] %>" alt="" class="w-100" />
              </div>
              <div class="col-md-4 d-flex flex-column gap-2">
                <div>
                  <img src="<%= companyImages[1] %>" alt="" class="w-100" />
                </div>
