              <div class="d-flex gap-3 align-items-center">
                <div
                  class="benefit-icon p-3 d-flex justify-content-center align-items-center"
                >
                  <i class="<%= getIconForPerk(perk) %>"></i>
                </div>
                <div>
                  <span><%= perk %></span>
                </div>
