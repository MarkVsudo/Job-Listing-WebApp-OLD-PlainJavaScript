    <section id="home">
      <h1 class="home-title">
        Empower your career journey<br />
        Discover <span>job opportunities</span><br />
        now
      </h1>
      <div class="home-search mt-5">
        <div class="d-flex w-50 gap-3">
          <div class="input-group mb-3 flex-grow-1">
            <span class="input-group-text">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-search"
                viewBox="0 0 16 16"
              >
                <path
                  d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"
                />
              </svg>
            </span>
            <input
              type="text"
              class="form-control form-control-lg"
              id="exampleFormControlInput1"
              placeholder="City, state, zip code, or 'remote'"
            />
          </div>
          <div class="input-group mb-3 flex-grow-1">
            <span class="input-group-text">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-geo-alt"
                viewBox="0 0 16 16"
              >
                <path
                  d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"
                />
                <path
                  d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"
                />
              </svg>
            </span>
            <input
              type="text"
              class="form-control form-control-lg"
              id="exampleFormControlInput2"
              placeholder="Job title, keywords, or company"
            />
          </div>
        </div>
        <button type="button" class="btn btn-search mb-5 fw-medium">
          Search
        </button>

        <div class="d-flex gap-5">
          <span class="fw-bold display-6 stats-home"
            >7856 <br /><span class="h5">Available job offers</span></span
          >
          <span class="fw-bold display-6 stats-home"
            >2004 <br /><span class="h5">Companies who trust us</span></span
          >
        </div>
      </div>
      <img src="./assets/home-page-svg.svg" alt="" class="home-main-image" />
      <img
        src="./assets/ellipse-background-home.svg"
        alt=""
        class="home-ellipse-bg"
      />
    </section>

    <section id="categories" class="d-flex align-items-center flex-column">
      <h2 class="text-center">Find the job which suits you the best</h2>
      <h4 class="text-center">There are 50+ job categories available</h4>
      <div class="container categories-block mt-5">
        <div class="category">
          <img src="./assets/it-category-img.svg" alt="category icon" />
          <span class="category-title">
            Information <br />Technology (IT)<br /><span>525 jobs</span></span
          >
        </div>
        <div class="category">
          <img src="./assets/house-category-img.svg" alt="category icon" />
          <span class="category-title">
            Real Estate <br />Business<br /><span>525 jobs</span></span
          >
        </div>
        <div class="category">
          <img src="./assets/book-category-img.svg" alt="category icon" />
          <span class="category-title">
            Education<br /><span>525 jobs</span></span
          >
        </div>
        <div class="category">
          <img
            src="./assets/engineering-category-img.svg"
            alt="category icon"
          />
          <span class="category-title">
            Engineering<br /><span>525 jobs</span></span
          >
        </div>
        <div class="category">
          <img src="./assets/finance-category-img.svg" alt="category icon" />
          <span class="category-title">
            Finance & <br />Banking<br /><span>525 jobs</span></span
          >
        </div>
        <div class="category">
          <img src="./assets/restaurant-category-img.svg" alt="category icon" />
          <span class="category-title">
            Restaurant <br />Services<br /><span>525 jobs</span></span
          >
        </div>
        <div class="category">
          <img src="./assets/marketing-category-img.svg" alt="category icon" />
          <span class="category-title">
            Marketing & <br />Advertising<br /><span>525 jobs</span></span
          >
        </div>
        <div class="category">
          <img src="./assets/hr-category-img.svg" alt="category icon" />
          <span class="category-title">
            Human <br />
            Resources (HR)<br /><span>525 jobs</span></span
          >
        </div>
      </div>

      <button type="button" class="btn btn-categories m-5 fw-medium">
        Explore all categories
      </button>

      <img
        src="./assets/ellipse-background-categories.svg"
        alt="categories ellipse background"
        class="ellipse-categories-bg"
      />
    </section>

    <section
      id="process"
      class="d-flex align-items-center justify-content-center"
    >
      <div class="process-main d-flex">
        <div class="process-sub d-flex align-items-start flex-column gap-2">
          <span class="process-num">1</span
          ><span class="process-title">Job apply</span>
          <p>
            Choose a job according to your preferences. Make sure you can meet
            the requirements and already understand how the job is chose.
          </p>
        </div>
        <div class="process-sub d-flex align-items-start flex-column gap-2">
          <span class="process-num">2</span
          ><span class="process-title">Candidate selection</span>
          <p>
            Choose a job according to your preferences. Make sure you can meet
            the requirements and already understand how the job is chose.
          </p>
        </div>
        <div class="process-sub d-flex align-items-start flex-column gap-2">
          <span class="process-num">3</span
          ><span class="process-title">Interview</span>
          <p>
            Choose a job according to your preferences. Make sure you can meet
            the requirements and already understand how the job is chose.
          </p>
        </div>
        <div>
          <img src="./assets/process_svg.svg" alt="" class="process-img" />
        </div>
      </div>
    </section>

    <div class="companies-line">
      <iconify-icon icon="logos:visa"></iconify-icon>
      <iconify-icon icon="logos:google"></iconify-icon>
      <iconify-icon icon="logos:discord"></iconify-icon>
      <iconify-icon
        icon="devicon:amazonwebservices-wordmark"
        width="64"
      ></iconify-icon>

      <iconify-icon icon="logos:microsoft"></iconify-icon>
